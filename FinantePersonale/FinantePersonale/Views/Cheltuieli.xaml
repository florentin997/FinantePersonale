<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:vm="clr-namespace:FinantePersonale.ViewModels"
             x:Class="FinantePersonale.Views.Cheltuieli">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:CheltuieliVM x:Key="vm"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salveaza"
                     Command="{Binding Source={StaticResource vm}, Path=SaveCheltuieliCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="50,0,50,0" >
                <Entry Placeholder="Suma"
                   x:Name="EntrySuma"/>
                <Picker x:Name="SubcatVen"/>
                <DatePicker x:Name="DataPickerCheltuieli" 
                            Format="yyyy/MM/dd" />
            </StackLayout>
                <microcharts:ChartView x:Name="charPieCheltuieli" HeightRequest="300"  />
        </StackLayout>
    </ContentPage.Content>
   
</ContentPage>