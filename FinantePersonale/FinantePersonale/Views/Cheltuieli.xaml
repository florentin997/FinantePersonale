<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:vm="clr-namespace:FinantePersonale.ViewModels"
             x:Class="FinantePersonale.Views.Cheltuieli">

    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:CheltuieliVM x:Key="vm"/>
        </ResourceDictionary>
        
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salveaza"
                     Command="{Binding Source={StaticResource vm}, Path=SaveCheltuieliCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="125,0,125,0" 
                         HorizontalOptions="CenterAndExpand"
                         BindingContext="{Binding Source={StaticResource vm}}">
                <Entry 
                    Placeholder="Suma"
                    HorizontalTextAlignment="Center"
                    Text="{Binding SumaC, Mode=OneWayToSource}"
                    Keyboard="Numeric"/>
                <Picker   
                    ItemsSource="{Binding SubcategoriiCheltuieli}"
                    SelectedItem="{Binding SubcategorieC, Mode=OneWayToSource}"   
                    HorizontalTextAlignment="Center"/>
                <DatePicker 
                    Format="yyyy/MM/dd" 
                    Date="{Binding DateC, Mode=TwoWay}"/>
                
            </StackLayout>
            
            <microcharts:ChartView x:Name="charPieCheltuieli" HeightRequest="250"/>
            <Button 
                Text="Add categorie"
                VerticalOptions="EndAndExpand"
                BackgroundColor="Green"
                Margin="125,0"
                Command="{Binding Source={StaticResource vm}, Path=PopUpAddCategorieCommand}"/>
            
        </StackLayout>
    </ContentPage.Content>


</ContentPage>