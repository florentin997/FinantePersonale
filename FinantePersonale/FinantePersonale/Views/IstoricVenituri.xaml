<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FinantePersonale.ViewModels"
             x:Class="FinantePersonale.Views.IstoricVenituri">

    <ContentPage.Resources>
        <ResourceDictionary>
            <vm:IstoricVenituriVM x:Key="vm"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ListView ItemsSource="{Binding Source={StaticResource vm}, Path=IstVenituri}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Suma}" 
                              TextColor="Black" 
                              Detail="{Binding Subcategorie}"/>
                    <!--nu apare si subcategoria-->
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>